@css {@import url(https://fonts.googleapis.com/css?family=Arvo:400,400italic,700,700italic);}

@import colors
@import '../kouto-swiss'

meyer-reset()
box-sizing-reset()
normalize()

header-height = 20vh
footer-height = 10vh

flex-center()
    display -ms-flex
    -ms-flex-direction column
    -ms-justify-content center
    -ms-align-content space-around
    -ms-align-items center

    display -webkit-flex
    -webkit-flex-direction column
    -webkit-justify-content center
    -webkit-align-content space-around
    -webkit-align-items center

    display flex
    flex-direction column
    justify-content center
    align-content space-around
    align-items center

disable-user-select()
    -webkit-touch-callout none
    -webkit-user-select   none
    -khtml-user-select    none
    -moz-user-select      none
    -ms-user-select       none
    user-select           none
    cursor             default

main.index

    article

        width 100%
        z-index 1
        height 100vh
        
        flex-center()

        gs( 'fluid', , ,0 )

        font-family 'Arvo'
        line-height 1.2
        color color-primary-0

    article.even
        background-color color-secondary-1-2

    article.odd
        background-color color-secondary-2-3

    .row
        row()

    .left
        col(6)
        text-align right

    .right
        col(6)
        text-align left

    .center
        flex-center()

    span:after
            content '\00a0'

    .are
        color color-complement-1

    .you
        color color-secondary-2-2

main.strategist

    article.strategist
        gs( 'fluid', 10 )

    .row
        row()
        clearfix()

    .col
        col(1)

